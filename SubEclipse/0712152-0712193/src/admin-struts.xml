<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true"></constant>
	<package name="admin"
		extends="struts-default,tiles-default,jcaptcha4struts2-default,json-default"
		namespace="/admin">

		<!-- global result -->
		<global-results>
			<result name="error">/global/error.jsp</result>
		</global-results>
		<!-- end global result -->

		<action name="admin" class="admin.action.taikhoan.AdminAction">
			<result name="yes">/admin/index.jsp</result>
			<result name="no" type="redirect">login</result>
		</action>
		<action name="Admin" class="admin.action.taikhoan.AdminAction">
			<result name="yes">/admin/index.jsp</result>
			<result name="no" type="redirect">login</result>
		</action>

		<!-- Login -->
		<action name="login">
			<result name="success">/admin/user/login.jsp</result>
		</action>
		<action name="doLogin" class="admin.action.taikhoan.AdminLoginAction"
			method="login">
			<result name="success" type="redirect">admin</result>
			<result name="input" type="redirect">login</result>
		</action>
		<action name="doLogout" class="admin.action.taikhoan.AdminLoginAction"
			method="logout">
			<result name="loggedout" type="redirect">login</result>
		</action>
		
		<action name="QuanLyCategories" class="action.DanhMucAction">
			<result name="success" type="tiles">AdminCategories.tiles</result>
			<result name="input" type="tiles">AdminCategories.tiles</result>
		</action>

		<action name="QuanLyProducts" class="action.SanPhamAction">
			<result name="success" type="tiles">AdminAddProducts1.tiles</result>
			<result name="input" type="tiles">AdminAddProducts1.tiles</result>
		</action>

		<action name="SanPham_themSanPham_*" class="action.SanPhamAction"
			method="themSanPham_step{1}">
			<result name="step2" type="tiles">AdminAddProducts2.tiles</result>
			<result name="success" type="tiles">AdminAddProducts3.tiles</result>
			<result name="finish" type="redirect">admin</result>
		</action>
		

		<action name="SanPham_xemDanhSachSanPham">
			<result name="success" type="tiles">AdminViewProducts.tiles</result>
			<result name="error" type="redirect">admin</result>
		</action>

		<action name="SanPham_xemDanhSachSanPhamDeNghi" class="action.gianhang.admin.SanPhamDeNghiAction"
			method="layDanhSachSanPhamDeNghi">
			<result name="success" type="tiles">AdminViewProductsProposal.tiles</result>
			<result name="error" type="redirect">admin</result>
		</action>

		<action name="jsonBangSanPham" class="action.sanpham.JsonTable">
			<result name="success" type="json"></result>
			<result name="error" type="redirect">admin</result>
		</action>

		<action name="TestAction" class="action.DanhMucAction">
			<result name="success">admin/test.jsp</result>
			<result name="input">admin/test.jsp</result>
		</action>
		
		<action name="ThanhVien_danhSach" class="admin.action.taikhoan.QuanLyNhomAction" method="execute">
			<result name="success">/admin/user/list.jsp</result>
		</action>
		<!-- end Admin -->

	</package>
</struts>
